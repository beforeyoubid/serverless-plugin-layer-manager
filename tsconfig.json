{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",

    "declaration": true,

    "outDir": "./dist",

    "strict": true,
    "noImplicitAny": false,

    "types": ["jest", "serverless", "pascalcase", "webpack", "lodash.merge"],
    "typeRoots": ["./node_modules/@types"],

    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
